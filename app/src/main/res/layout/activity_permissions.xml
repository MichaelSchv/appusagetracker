<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UI.PermissionsActivity">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/permissions_LBL_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="App Usage Tracker"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/permissions_LBL_permissions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="This app needs permission to access usage stats to track app usage. \nPlease grant the permission in the next screen."
        android:textSize="20sp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/permissions_BTN_allowButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Allow Permissions"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="240dp"/>



</androidx.appcompat.widget.LinearLayoutCompat>